<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/iniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar"
        android:onClick="iniciar"
        android:layout_above="@id/textoBotao"
        android:textSize="10pt"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/sairApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10pt"
        android:backgroundTint="#ff0000"
        android:layout_centerHorizontal="true"
        android:onClick="sairApp"
        android:text="Sair"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textSize="10pt" />

    <TextView
        android:id="@+id/nomeApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19pt"
        android:textColor="#000000"
        android:fontFamily="casual"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:text="Simulador Enem" />

    <LinearLayout
        android:id="@+id/botoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/textoIdiomas"
        android:layout_marginBottom="6dp">

        <Button
            android:id="@+id/rapido"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Rápido"
            android:onClick="rapido"
            android:backgroundTint="#0AA7C8"
            android:textSize="5pt"
            />
        <Button
            android:id="@+id/normal"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="normal"
            android:backgroundTint="#0AA7C8"
            android:textSize="5pt"
            />
        <Button
            android:id="@+id/demorado"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Demorado"
            android:backgroundTint="#0AA7C8"
            android:onClick="demorado"
            android:textSize="5pt"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idiomas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/sairApp"
        android:layout_marginBottom="6dp">

        <Button
            android:id="@+id/ingles"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Inglês"
            android:onClick="ingles"
            android:layout_marginRight="5dp"
            android:backgroundTint="#009400"
            android:textSize="6pt"
            />
        <Button
            android:id="@+id/espanhol"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Espanhol"
            android:layout_marginLeft="5dp"
            android:onClick="espanhol"
            android:backgroundTint="#009400"
            android:textSize="6pt"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/textoBotao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="8pt"
        android:textStyle="bold"
        android:layout_above="@id/botoes"
        android:text="Escolha a duração da sua prova:" />


<TextView
android:id="@+id/textoIdiomas"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textColor="#000000"
android:layout_marginBottom="10dp"
android:layout_marginTop="8dp"
android:layout_centerHorizontal="true"
android:textSize="8pt"
android:textStyle="bold"
android:layout_above="@id/idiomas"
android:text="Com questões de:" />

    <ImageView
        android:id="@+id/imagemCapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iniciar"
        android:layout_below="@id/nomeApp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/capa_simulador_enem" />

</RelativeLayout>